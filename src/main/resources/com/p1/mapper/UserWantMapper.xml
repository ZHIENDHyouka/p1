<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.p1.mapper.UserWantMapper">
    <resultMap id="userwantMap" type="com.p1.entity.UserWant">
        <id column="id" property="userId"></id>
        <result column="m_id" property="movieId"></result>
    </resultMap>

    <insert id="insertUW">
        insert into userwant(id,
                             m_id)
        values (#{userId},
                #{movieId})
    </insert>

    <select id="selectUW" resultMap="userwantMap">
        select *
        from userwant
        where id = #{userId}
    </select>
    <select id="selectUWById" resultMap="userwantMap">
        select *
        from userwant
        where (id = #{userId},
               m_id = #{movieId})
    </select>


    <delete id="deleteUW">
        delete
        from userwant
        where (id = #{userId},
               m_id = #{movieId})
    </delete>

    <select id="selectCount" resultType="int">
        select count(1)
        from userwant
        where id = #{userId}
    </select>

    <select id="selectUWByUserId" resultMap="userwantMap">
        select *
        from userwant
        where id = #{userId}

    </select>

</mapper>