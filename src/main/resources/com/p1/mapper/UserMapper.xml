<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.p1.mapper.UserMapper">
    <resultMap id="userMap" type="com.p1.entity.User">
        <id column="id" property="userId"></id>
        <result column="username" property="userName"></result>
        <result column="account" property="userAccount"></result>
        <result column="password" property="userPwd"></result>
        <result column="vip_levl" property="userVipLevel"></result>
        <result column="sex" property="userSex"></result>
    </resultMap>


    <insert id="insertUser">
        insert into user(username,
                         account,
                         password,
                         sex)
        values (#{userName},
                #{userAccount},
                #{userPwd},
                #{userSex})
    </insert>

    <update id="updateUserName">
        update user
        <set>
            <if test="userName!=null ">
                username=#{userName}
            </if>

        </set>
        where id=#{userId}

    </update>

    <update id="updateUserPwd">
        update user
        <set>
            password=#{userPwd}
        </set>
        where id=#{userId}
    </update>

    <select id="selectByUserId" resultMap="userMap">
        select *
        from user
        where id = #{userId}
    </select>
    <select id="selectAllUser" resultMap="userMap">
        select *
        from user;
    </select>
    <select id="selectCount" resultType="int">
        select count(1)
        from user
    </select>

</mapper>